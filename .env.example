# AutomoBee Environment Configuration

# Paths
CAMERA_CONFIG_PATH=config/cameras.json
MODEL_PATH=models/yolov8m.pt
CLASSIFIER_PATH=models/vehicle_classifier.pt

# Database
DATABASE_URL=sqlite:///automobee.db

# Server
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PORT=8765
MAX_CONCURRENT_STREAMS=8

# Detection
BATCH_SIZE=4
CONFIDENCE_THRESHOLD=0.65
MAX_BATCH_LATENCY=0.1
GPU_MEMORY_FRACTION=0.8

# Monitoring
LOG_LEVEL=INFO
METRICS_INTERVAL=30
HEALTH_CHECK_INTERVAL=60

# Performance
MAX_FRAME_BUFFER=30
FRAME_SKIP=2
MAX_DETECTION_HISTORY=1000

# Security
AUTH_REQUIRED=false
AUTH_TOKEN_SECRET=change_this_in_production 